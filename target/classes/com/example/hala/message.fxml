<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="425.0" prefWidth="315.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hala.MessageController">
    <children>
        <Label fx:id="friendNameL" alignment="CENTER" layoutX="14.0" layoutY="10.0" onMouseClicked="#onMessageWindowClick" prefHeight="17.0" prefWidth="284.0" textFill="#9d0a0a">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
        </Label>
        <ScrollPane layoutX="11.0" layoutY="111.0" prefHeight="306.0" prefWidth="291.0">
            <content>
                <VBox fx:id="messageVB" onMouseClicked="#onMessageWindowClick" prefHeight="290.0" prefWidth="284.0" />
            </content>
        </ScrollPane>
        <TextField fx:id="addMessageTF" layoutX="14.0" layoutY="41.0" onMouseClicked="#onMessageWindowClick" prefHeight="25.0" prefWidth="284.0" />
        <Button fx:id="sendMessageB" layoutX="100.0" layoutY="77.0" mnemonicParsing="false" onAction="#onSendMessageBClick" prefHeight="25.0" prefWidth="111.0" text="Send">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Button>
    </children>
</AnchorPane>
